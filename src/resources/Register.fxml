<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>

<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="main.JavaFxController.RegisterController"
          stylesheets="@css/RegisterView.css"
          styleClass="grid-pane"
          alignment="BOTTOM_LEFT">
    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="33"/>
        <RowConstraints percentHeight="33"/>
        <RowConstraints percentHeight="34"/>
    </rowConstraints>

    <Label fx:id="statusLabel" text="STATUS:"
           GridPane.rowIndex="0" GridPane.columnIndex="0"
           styleClass="standardLabel"/>

    <Label fx:id="RP0" text="RP0: "
           GridPane.rowIndex="0" GridPane.columnIndex="1"
           styleClass="standardLabel"/>

    <Label fx:id="C" text="C: "
           GridPane.rowIndex="0" GridPane.columnIndex="2"
           styleClass="standardLabel"/>

    <Label fx:id="DC" text="DC: "
           GridPane.rowIndex="0" GridPane.columnIndex="3"
           styleClass="standardLabel"/>

    <Label fx:id="Z" text="Z: "
           GridPane.rowIndex="0" GridPane.columnIndex="4"
           styleClass="standardLabel"/>

    <!-- Separator -->
    <Separator GridPane.rowIndex="1" GridPane.columnSpan="5" styleClass="verticalSeparator standardLabel"
    />


    <Label fx:id="W" text="W: "
           GridPane.rowIndex="2" GridPane.columnIndex="0"
           styleClass="standardLabel"/>

    <Label fx:id="WValue" text="Error"
           GridPane.rowIndex="2" GridPane.columnIndex="1"
           styleClass="standardLabel"/>
    <Label fx:id="PCL" text="PCL: "
           GridPane.rowIndex="2" GridPane.columnIndex="2"
           styleClass="standardLabel"/>
    <Label fx:id="PCLValue" text="Error"
           GridPane.rowIndex="2" GridPane.columnIndex="3"
           styleClass="standardLabel"/>
</GridPane>
