<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="main.JavaFxController.RegisterController"
          stylesheets="@css/RegisterView.css"
          styleClass="grid-pane">

    <!-- 3 Spalten: links, Divider, rechts -->
    <rowConstraints>



    </rowConstraints>




    <children>

        <Label fx:id="statusLabel" text="STATUS:"
               GridPane.rowIndex="0" GridPane.columnIndex="0"
               styleClass="cell" />

        <Label fx:id="RP0" text="RP0: "
               GridPane.rowIndex="0" GridPane.columnIndex="1"
               styleClass="cell" />

        <Label fx:id="C" text="C: "
               GridPane.rowIndex="0" GridPane.columnIndex="2"
               styleClass="cell" />

        <Label fx:id="DC" text="DC: "
               GridPane.rowIndex="0" GridPane.columnIndex="3"
               styleClass="cell" />

        <Label fx:id="Z" text="Z: "
               GridPane.rowIndex="0" GridPane.columnIndex="4"
               styleClass="cell" />

        <!-- Separator (Row 1) -->
        <Separator GridPane.rowIndex="1" GridPane.columnSpan="5"
                   orientation="HORIZONTAL" />


        <Label fx:id="W" text="W: "
               GridPane.rowIndex="2" GridPane.columnIndex="0"
               styleClass="cell" />

        <Label fx:id="WValue" text="Error"
               GridPane.rowIndex="2" GridPane.columnIndex="1"
               styleClass="cell" />
        <Label fx:id="PCL" text="PCL: "
               GridPane.rowIndex="2" GridPane.columnIndex="2"
               styleClass="cell" />
        <Label fx:id="PCLLabel" text="Error"
               GridPane.rowIndex="2" GridPane.columnIndex="3"
               styleClass="cell" />
    </children>
</GridPane>
